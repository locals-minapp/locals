/* pages/dateSelect/dateSelect.wxss */
page{
  font-family: "Helvetica Neue", "Hiragino Sans GB", "Microsoft YaHei", "\9ED1\4F53", Arial, sans-serif;
  color:#333;
  font-size: 28rpx;
  overflow-x: hidden;
  overflow-y: auto;
}
input{
  font-family: "Helvetica Neue", "Hiragino Sans GB", "Microsoft YaHei", "\9ED1\4F53", Arial, sans-serif;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.layout-flex{
    display:flex;
}
.layout-flex .row{
    flex-direction: row;
}
.layout-flex .column{
    flex-direction: column;
}
.align-center{
    align-items:center;
    justify-content: center;
}
.date-day{
    display: flex;
    flex-direction: column;
    margin:5px;
    text-align:center;
    justify-content: center;
    align-items: center;
}
.date-day.active{
    background: #ff4a4d;
    color:#FFF;
    border-radius: 100%;
}
.date-day.start-date::after{
    content: "入住";
    display: block;
    font-size: 10px;
    color: #fff;
}
.date-day.end-date::after{
    content: "离开";
    display: block;
    font-size: 10px;
    color: #fff;
}
.date-day.through-date {
    background: #aaa
}
.date-day.unavailable{
    color:#aaa;
}

.date-week{
    display: flex;
    justify-content: center;
    align-content: center;
    margin:5px;
}
.week{
    color:#FF9C01;
}