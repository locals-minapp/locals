/* pages/mybook/order-detail-info/guide/guide.wxss */
.container{
    background: #fff;
    width: 90%;
    height: 100%;
    padding:0 0 20%;
    justify-content:stretch;
    align-items:stretch;
    margin: 0 auto;
}

.part{
    margin-top: 30rpx
}

.part1-left,.part1-right{
    width: 40%;
}

.part1-right{
    display: inline-block;
    height: 160rpx;
    width:300rpx;
    margin-left: 40rpx;
    background-size: cover;

}

.part1-left{
    display: inline-block;
    vertical-align:sub;

}

.part1Ltext{
    font-size: 40rpx;
    margin-top: 14rpx;
    font-weight: bold;
    width: 100%;
    display: block
}

.xiexian{
    width: 60rpx;
    height: 10rpx;
    background-color: #333333;
    transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg);
    -moz-transform: rotate(-45deg);
    -ms-transform: rotate(-45deg);
    -o-transform: rotate(-45deg);
    margin:30rpx 0;
}

.part2{
    margin-top:60rpx;
}

.part2-top{
    background-size: cover;
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin: 0 auto;
    display: block;
    border:solid white 0px;
}

.part2-middle{
    color: #e84b60;
    width: 450rpx;
    /*height: 30rpx;*/
    display: block;
    margin: 0 auto;
    text-align: center;
    margin-top: 30rpx;
    font-size: 14px;
}

.part2-bottom{
    width: 450rpx;
    height: 30rpx;
    display: block;
    margin: 12rpx auto;
    text-align: center;
    font-size: 14px;
}
.part3,.part4{
    margin-top:60rpx
}

.part3-left,.part3-right,.part4-left,.part4-right{
    width: 49%;
    display: inline-block;
}

.part3-title,.part4-name{
    text-align: center;
    display: block;
    font-size: 15px;
}
.part3-img{
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    margin: 15rpx auto;
    display: block;
}
.part3-name,.part4-day,.part4-date{
    text-align: center;
    display: block;
    font-size: 12px;
    margin-top: 24rpx;
    color: #999999;
    margin-bottom: 20rpx
}
.part3-Rphone,.part3-Rwx,.part3-Lphone,.part3-Lwx{
    color: #e84b60;
    font-size: 14px;
    font-family: "arial","微软雅黑";
    display: inline-block;
    text-align: center;
    position: relative;
    margin: 15rpx 0;
}

.part3-num{
    text-align: center
}

.part3-phone-img,.part3-wx-img{
    width: 32rpx;
    height:32rpx;
    display: inline-block;
    margin-right:20rpx;
}

.part-img{
    height: 36rpx;
    width:30rpx;
    margin:0px 15rpx 0px 6rpx;
}
.part-dirimg{
    height: 36rpx;
    width:25rpx;
    margin:0px 10rpx 0px 6rpx;
    float: right;
}

.part-title{
    font-size:15px;
    font-family: 'HelveticaNeue', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    margin:12rpx 0;
    display: inline-block;
}

.part5-addr{
    color: #999999;
    font-size:12px;
    margin:15rpx 0px 0px 30rpx
}

.part10-text{
    display: block;
    margin: 12rpx 0 12rpx 25rpx;
    font-size: 14px;
    line-height: 20px;
    color: #999999;
}

.part11-mainimg{
    margin: 60rpx auto 0;
    height: 240rpx;
    width: 280rpx;
    display: block;
}

.part12-text{
    color: #e84b60;
    margin: 12rpx 0 12rpx 50rpx;
    display: block;
    font-size: 14px;
    line-height: 20px;
        font-family: 'HelveticaNeue', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.part13-img{
    margin: 60rpx auto 0;
    height: 240rpx;
    width: 240rpx;
    display: block;
}
.part13-text{
    color: #999999;
    text-align: center;
    font-size: 14px;
    margin-top: 30rpx;
    display: block
}

.part14-text{
    text-align: center;
    font-size: 12px;
    color: #999999;
    line-height: 45rpx;
    display: block
}

.back{
    position: fixed;
    bottom: 0;
    left:0;
    height: auto;
    width: 100%;
    text-align: center;
    border-top:1px solid #000;
    padding:10px 0;
    background-color: #fff;
}