.house-gallery-container {
  background-color: #473c31;
}

swiper {
  width: 100%;
  height: 1200rpx;
}

/*less sass*/

swiper image {
  width: 100%;
  /*height:800rpx;*/
}
.descript-index{
    position:absolute;
    background-color: rgba(71,60,49,0.6);
    width: 100%;
    
    bottom:120rpx;
padding:20rpx;

}
.descript-index .infoTitle{
    display: block;
    color: white;
    font-size: 23rpx;
    height: 38rpx;
    line-height: 38rpx;
}
.descript-index .line{
    
   
    padding: 0px;
    overflow: hidden;
    width: 150rpx;
  height: 1rpx;
  border-top:solid #645F54 1px;
}
.descript-index .price{
    display: block;
        color: #c1bcbc;
        font-size: 20rpx;
        height: 34rpx;
        line-height: 34rpx;
}
.descript-index .des{
    /*display: block;*/
    color: #c1bcbc;
    font-size: 20rpx;
     /*margin-top: -4px; */
     width: 90%;
     line-height: 34rpx;
     display: -webkit-box;

-webkit-line-clamp: 2;


overflow: hidden;
	display: -webkit-box;
    -webkit-box-orient: vertical;
    transition: 1s;
}
.page-index{
      color: white;
    padding-right: 30rpx;
    font-size: 21rpx;
}
.page-index text{
  float:right;
}
.memberInfo {
  display: block;
  position: fixed;
  width: 100%;
  bottom: 0;
  background-color: #473c31;
  padding: 15rpx;
}
.houseOwner{
   height:80rpx;
margin-top:20rpx;
display:inline-block;
line-height:40rpx;
vertical-align:middle;

}

.houseOwnerImg {
  width: 80rpx;
  height: 80rpx;
  float: left;
  border-radius: 80rpx;
  border: solid white 0px;
  margin: 10rpx 20rpx 10rpx 10rpx;
}

.houseOwnerName {
  display: block;
  color: white;
  
  /*margin-top:20rpx;*/
}

.contactHouseOwner {
  color: #d53448;
  font-weight: bold;
  font-size: 12px;
  line-height: 13px;
}

.other {
  float: right;
  margin-top:40rpx;
}

.comment, .location, .calendar {
  display: inline-block;
  margin-right: 10rpx;
}

.comment-img, .location-img, .calendar-img {
  width: 21rpx;
  height: 20rpx;
  vertical-align: middle;
}

.comment-text, .location-text, .calendar-text {
  color: #cfcbc6;
  margin-left: 10rpx;
  margin-right: 20rpx;
  font-size: 21rpx;
  height: 21rpx;
  line-height: 21rpx;
  vertical-align: middle;
}
.house-gallery-item image{
    width:100%;
  height: 100%;
  /*max-height: 1000rpx;*/
}
.house-gallery-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  /*align-items: center;*/
  height:1100rpx;
  background-color: #473c31;
}