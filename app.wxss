/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
} 
.flex-wrap {
  display: flex;
}
.flex-tab {
  flex-flow: row nowrap;
  justify-content: space-around;
  align-content: stretch
}
.flex-item {
  flex-grow: 1;
  text-align: center;
}
.top-tab {
  width: 100%;
  height:60rpx;
  background: #fff;
  color: #e0e0e0;
  font-size: 28rpx;
  line-height: 60rpx;
  position: fixed;
  top: 0;
  margin: 0 0 4rpx 0;
  z-index:9999;

}

.search-content {
  height: 60rpx;
  line-height: 60rpx;
  background-color: #e7e7e7;
  margin: 10px 20px;
  padding: 10rpx;
  border-radius: 5px;
  color: #333;
}

.search-img {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
  margin-right: 15rpx;
}

.search-key {
  font-size: 24rpx;
  vertical-align: middle;
}

.search-top-menu {
  margin: 0 20px;
  padding: 0 10rpx;
}

.hind-search-more-wrap{
  display: inline-block;
  width: 50%;
}

.clean-search {
  float: right;
  font-size: 24rpx;
  vertical-align: middle;
}