/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.flex-wrap {
  display: flex;
}
.flex-tab {
  flex-flow: row nowrap;
  justify-content: space-around;
  align-content: stretch
}
.flex-item {
  flex-grow: 1;
  text-align: center;
}
.top-tab {
  width: 100%;
  height:60rpx;
  background: #fff;
  color: #e0e0e0;
  font-size: 28rpx;
  line-height: 60rpx;
  position: fixed;
  top: 0;
  margin: 0 0 4rpx 0;
  z-index:9999;

}